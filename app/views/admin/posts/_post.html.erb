<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= post.slug %>
  </p>

  <p>
    <strong>Content:</strong>
    <div class="action-text px-5">
      <%= post.content %>
    </div>
  </p>

  <p>
    <strong>Status:</strong>
    <%= post.status %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= post.category.humanize %>
  </p>

  <p>
    <strong>Publish scheduled at:</strong>
    <%= post.publish_scheduled_at %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>

  <p>
    <strong>Archived at:</strong>
    <%= post.archived_at %>
  </p>

</div>
