<section id="News" class="bg-white">
  <div style="overflow: hidden;">
    <svg
      preserveAspectRatio="none"
      viewBox="0 0 1200 120"
      xmlns="http://www.w3.org/2000/svg"
      style="fill: #D30001; width: 100%; height: 35px;"
    >
      <path
        d="M0 0v46.29c47.79 22.2 103.59 32.17 158 28 70.36-5.37 136.33-33.31 206.8-37.5 73.84-4.36 147.54 16.88 218.2 35.26 69.27 18 138.3 24.88 209.4 13.08 36.15-6 69.85-17.84 104.45-29.34C989.49 25 1113-14.29 1200 52.47V0z"
        opacity=".25"
        />
      <path
        d="M0 0v15.81c13 21.11 27.64 41.05 47.69 56.24C99.41 111.27 165 111 224.58 91.58c31.15-10.15 60.09-26.07 89.67-39.8 40.92-19 84.73-46 130.83-49.67 36.26-2.85 70.9 9.42 98.6 31.56 31.77 25.39 62.32 62 103.63 73 40.44 10.79 81.35-6.69 119.13-24.28s75.16-39 116.92-43.05c59.73-5.85 113.28 22.88 168.9 38.84 30.2 8.66 59 6.17 87.09-7.5 22.43-10.89 48-26.93 60.65-49.24V0z"
        opacity=".5"
        />
      <path d="M0 0v5.63C149.93 59 314.09 71.32 475.83 42.57c43-7.64 84.23-20.12 127.61-26.46 59-8.63 112.48 12.24 165.56 35.4C827.93 77.22 886 95.24 951.2 90c86.53-7 172.46-45.71 248.8-84.81V0z" />
    </svg>
  </div>
  <div class="max-w-xs sm:max-w-xl md:max-w-3xl lg:max-w-5xl mx-auto px-4 sm:px-6 md:px-8">
    <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-6 sm:mb-8 md:mb-10">News</h1>

    <% if @posts.present? %>
      <div class="space-y-4 sm:space-y-5 md:space-y-6">
        <% @posts.each do |post| %>
          <article class="group">
            <div class="flex flex-col sm:flex-row sm:items-start gap-2 sm:gap-4 p-3 sm:p-4 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="text-gray-500 text-sm sm:text-base md:min-w-36 md:max-w-36 shrink-0">
                <%= post.published_at.strftime("%B %d, %Y") %>
              </div>

              <div class="flex-grow">
                <h2 class="text-lg sm:text-xl md:text-2xl font-semibold text-ruby-red group-hover:text-red-700 transition-colors">
                  <%= link_to post.title, post_path(post), class: "no-underline" %>
                </h2>
              </div>
            </div>
          </article>
        <% end %>
      </div>

      <div class="mt-8 sm:mt-10 md:mt-12">
        <div class="h-px w-full bg-ruby-red/20"></div>
      </div>

      <div class="mt-6 sm:mt-8 flex justify-center sm:justify-end">
        <%= link_to "View all news", posts_path,
                    class: "inline-flex items-center justify-center bg-white border border-ruby-red text-ruby-red hover:bg-ruby-red hover:text-white font-medium py-2 px-4 sm:py-2 sm:px-5 rounded-lg transition-colors text-sm sm:text-base" %>
      </div>
    <% else %>
      <div class="bg-gray-50 rounded-lg p-6 sm:p-8 md:p-10 text-center">
        <p class="text-base sm:text-lg md:text-xl text-gray-600">
          No news posts available at the moment.
        </p>
      </div>

      <div class="mt-8 sm:mt-10 md:mt-12">
        <div class="h-px w-full bg-ruby-red/20"></div>
      </div>
    <% end %>
  </div>
  <div style="overflow: hidden;">
    <svg
      preserveAspectRatio="none"
      viewBox="0 0 1200 120"
      xmlns="http://www.w3.org/2000/svg"
      style="fill: #D30001; width: 100%; height: 35px; transform: rotate(180deg);"
    >
      <path
        d="M0 0v46.29c47.79 22.2 103.59 32.17 158 28 70.36-5.37 136.33-33.31 206.8-37.5 73.84-4.36 147.54 16.88 218.2 35.26 69.27 18 138.3 24.88 209.4 13.08 36.15-6 69.85-17.84 104.45-29.34C989.49 25 1113-14.29 1200 52.47V0z"
        opacity=".25"
        />
      <path
        d="M0 0v15.81c13 21.11 27.64 41.05 47.69 56.24C99.41 111.27 165 111 224.58 91.58c31.15-10.15 60.09-26.07 89.67-39.8 40.92-19 84.73-46 130.83-49.67 36.26-2.85 70.9 9.42 98.6 31.56 31.77 25.39 62.32 62 103.63 73 40.44 10.79 81.35-6.69 119.13-24.28s75.16-39 116.92-43.05c59.73-5.85 113.28 22.88 168.9 38.84 30.2 8.66 59 6.17 87.09-7.5 22.43-10.89 48-26.93 60.65-49.24V0z"
        opacity=".5"
        />
      <path d="M0 0v5.63C149.93 59 314.09 71.32 475.83 42.57c43-7.64 84.23-20.12 127.61-26.46 59-8.63 112.48 12.24 165.56 35.4C827.93 77.22 886 95.24 951.2 90c86.53-7 172.46-45.71 248.8-84.81V0z" />
    </svg>
  </div>
</section>
