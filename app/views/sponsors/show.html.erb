<%= content_for :heading do %>
  <%= @sponsor['name'] %>
<% end %>

<section class="flex flex-1 flex-col border-l-2 border-grey-lighter md:mt-5">
  <article class="welcome">
    <div class="markdown sponsor-standalone">
      <div class="sponsor-header mb-6">
        <h1><%= link_to @sponsor['name'], @sponsor['url'], target: '_blank', rel: 'noopener' %></h1>

        <p class="sponsor-logos">
          <% @sponsor['images'].each do |image| %>
            <%= link_to @sponsor['url'], target: '_blank', rel: 'noopener', class: "sponsor-logo-no-border" do %>
              <%= image_tag "sponsors/#{image}", class: "sponsor-logo sponsor-logo-standalone", alt: @sponsor['name'] %>
            <% end %>
          <% end %>
        </p>
      </div>

      <div class="sponsor-bio">
        <%= markdown_to_html @sponsor['bio'] %>
      </div>

      <div class="sponsor-meta mt-6 pt-4 border-t border-gray-200">
        <p><strong>Tier:</strong> <%= @sponsor['tier'] %></p>
        <p class="mt-2">
          <%= link_to "← Back to sponsorship", "/sponsorship", class: "text-red hover:underline" %>
        </p>
      </div>
    </div>
  </article>
</section>
